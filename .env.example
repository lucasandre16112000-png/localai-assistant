# LocalAI Assistant - Environment Variables
# Author: Lucas Andre S
# Copy this file to .env and configure your settings

# ===========================================
# Application Settings
# ===========================================
APP_NAME=LocalAI Assistant
APP_VERSION=1.0.0
DEBUG=false

# ===========================================
# Server Settings
# ===========================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ===========================================
# Database Settings
# ===========================================
# SQLite (default)
DATABASE_URL=sqlite:///./localai.db

# PostgreSQL (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/localai

# ===========================================
# Ollama Settings
# ===========================================
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_MODEL=dolphin-mistral

# ===========================================
# LLM Parameters
# ===========================================
DEFAULT_TEMPERATURE=0.7
DEFAULT_TOP_P=0.9
DEFAULT_TOP_K=40
DEFAULT_MAX_TOKENS=2048

# ===========================================
# Security Settings
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production
API_KEY_HEADER=X-API-Key

# ===========================================
# CORS Settings
# ===========================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO

# ===========================================
# WebSocket Settings
# ===========================================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100
